{
  "include": ["./src/"],
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "outDir": "./build/",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
